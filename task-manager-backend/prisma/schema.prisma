// -------------------------------------
// Datasource & Generator
// -------------------------------------
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -------------------------------------
// ENUMS
// -------------------------------------
enum TaskStatus {
  todo
  in_progress
  done
}

enum MissionStatus {
  LOCKED
  AVAILABLE
  IN_PROGRESS
  REVIEW_READY
  COMPLETED
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

enum SkillCategory {
  BACKEND
  DATABASE
  DEVOPS
  SYSTEM_DESIGN
  ALGORITHMS
  TESTING
  SECURITY
  FRONTEND
}

enum WorkspaceRole {
  admin
  member
}

// -------------------------------------
// CORE USER MODELS
// -------------------------------------

model User {
  id           Int      @id @default(autoincrement())
  name         String?
  email        String   @unique
  password     String?
  profileImage String?
  role         String   @default("student") // student, mentor, admin
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Learning System Relations
  stats           UserStats?
  skillProgress   UserSkillProgress[]
  missionProgress UserMissionProgress[]
  
  // Legacy / Basic Task Manager Relations
  workspacesOwned  Workspace[]       @relation("WorkspaceOwner")
  workspaceMembers WorkspaceMember[]
  projectsCreated  Project[]         @relation("ProjectCreator")
  tasksCreated     Task[]            @relation("TaskCreator")
  tasksAssigned    Task[]            @relation("TaskAssignedTo")
  activityLogs     ActivityLog[]
  refreshTokens    RefreshToken[]
  oauthAccounts    OAuthAccount[]
  notifications    Notification[]
}

model UserStats {
  id             Int      @id @default(autoincrement())
  userId         Int      @unique
  totalXP        Int      @default(0)
  currentLevel   Int      @default(1)
  currentStreak  Int      @default(0)
  lastActivityAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// -------------------------------------
// LEARNING SYSTEM MODELS (NEW)
// -------------------------------------

model Skill {
  id            Int           @id @default(autoincrement())
  name          String        @unique
  slug          String        @unique
  category      SkillCategory
  description   String?
  level         Difficulty    @default(BEGINNER)
  icon          String?
  
  // Tree Structure
  parentId      Int?
  parent        Skill?        @relation("SkillTree", fields: [parentId], references: [id])
  children      Skill[]       @relation("SkillTree")
  
  // Relations
  missions      Mission[]
  userProgress  UserSkillProgress[]
  
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Mission {
  id               Int           @id @default(autoincrement())
  title            String
  slug             String        @unique
  skillId          Int
  difficulty       Difficulty
  xpReward         Int           @default(100)
  description      String        // Markdown content
  objectives       String[]      // List of specific requirements
  acceptanceCriteria String[]    // Checkbox items for user
  starterCodeUrl   String?
  
  // Unlock Logic
  prerequisites    Json?         // Logic for unlocking (e.g. { "missionIds": [1, 2] })
  
  // Relations
  skill            Skill         @relation(fields: [skillId], references: [id])
  userProgress     UserMissionProgress[]
  
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

model UserSkillProgress {
  id           Int      @id @default(autoincrement())
  userId       Int
  skillId      Int
  masteryLevel Int      @default(0) // 0-100%
  isUnlocked   Boolean  @default(false)
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  skill        Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)
  
  @@unique([userId, skillId])
}

model UserMissionProgress {
  id             Int           @id @default(autoincrement())
  userId         Int
  missionId      Int
  status         MissionStatus @default(LOCKED)
  submissionUrl  String?       // GitHub PR link
  reflection     String?       // User notes
  feedback       String?       // Mentor/AI feedback
  completedAt    DateTime?
  startedAt      DateTime?
  
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  mission        Mission       @relation(fields: [missionId], references: [id], onDelete: Cascade)
  
  @@unique([userId, missionId])
}

// -------------------------------------
// LEGACY / UTILITY MODELS
// -------------------------------------

model Workspace {
  id        Int      @id @default(autoincrement())
  name      String
  ownerId   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner    User              @relation("WorkspaceOwner", fields: [ownerId], references: [id])
  members  WorkspaceMember[]
  projects Project[]
  activity ActivityLog[]
}

model WorkspaceMember {
  id          Int           @id @default(autoincrement())
  workspaceId Int
  userId      Int
  role        WorkspaceRole
  createdAt   DateTime      @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id])
  user      User      @relation(fields: [userId], references: [id])

  @@unique([workspaceId, userId])
}

model Project {
  id          Int      @id @default(autoincrement())
  workspaceId Int
  name        String
  description String?
  createdBy   Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace Workspace     @relation(fields: [workspaceId], references: [id])
  creator   User          @relation("ProjectCreator", fields: [createdBy], references: [id])
  tasks     Task[]
  activity  ActivityLog[]
}

model Task {
  id          Int          @id @default(autoincrement())
  projectId   Int
  title       String
  description String?
  status      TaskStatus   @default(todo)
  dueDate     DateTime?
  assignedTo  Int?
  createdBy   Int
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  project     Project      @relation(fields: [projectId], references: [id])
  assigned    User?        @relation("TaskAssignedTo", fields: [assignedTo], references: [id])
  creator     User         @relation("TaskCreator", fields: [createdBy], references: [id])
  
  // Keeping these for now to not break legacy code too hard, but they might be unused
  files       Attachment[]
  logs        ActivityLog[]
}

model Attachment {
  id        Int      @id @default(autoincrement())
  taskId    Int
  filename  String
  mimetype  String
  size      Int
  url       String
  createdAt DateTime @default(now())

  task      Task     @relation(fields: [taskId], references: [id])
}

model ActivityLog {
  id          Int      @id @default(autoincrement())
  workspaceId Int?
  projectId   Int?
  taskId      Int?
  userId      Int?
  type        String
  title       String
  icon        String
  metadata    Json
  createdAt   DateTime @default(now())

  workspace   Workspace? @relation(fields: [workspaceId], references: [id])
  project     Project?   @relation(fields: [projectId], references: [id])
  task        Task?      @relation(fields: [taskId], references: [id])
  user        User?      @relation(fields: [userId], references: [id])
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}

model OAuthAccount {
  id                Int      @id @default(autoincrement())
  userId            Int
  provider          String
  providerAccountId String
  createdAt         DateTime @default(now())

  user              User     @relation(fields: [userId], references: [id])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  type      String
  title     String
  body      String
  data      Json?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}
